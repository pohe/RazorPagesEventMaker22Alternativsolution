@page
@model RazorPagesEventMaker22.Pages.Events.CreateEventModel
@{
    ViewData["Title"] = "CreateEvent";
}

<h1>Create Event</h1>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="@Model.Event.Name" class="control-label" ></label>
                <input asp-for="@Model.Event.Name" class="form-control" />
                <span asp-validation-for="Event.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Event.Description" class="control-label"></label>
                <input asp-for="@Model.Event.Description" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Event.City" class="control-label"></label>
                <input asp-for="@Model.Event.City" class="form-control" />
                <span asp-validation-for="Event.City" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Event.DateTime" class="control-label"></label>
                <input asp-for="@Model.Event.DateTime" class="form-control" />
                <span asp-validation-for="Event.DateTime" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.Event.CountryCode" class="control-label"></label>
                <select  asp-for="@Model.Event.CountryCode"  class="form-control" asp-items="@Model.CountryCodes">
                    <option  value="">-- Select country---</option>
                </select>
            </div>
            <div class="formgroup">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>

        </form>


    </div>
    <div>
    <a asp-page="Index">Back to List</a>
    </div>
</div>

